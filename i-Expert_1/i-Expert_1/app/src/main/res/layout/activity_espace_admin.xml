<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.i_expert.EspaceAdmin">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="1000dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView5"
        app:srcCompat="@android:color/holo_orange_dark" />

    <TextView
        android:text="Modifier votre compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:textStyle="normal|bold"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Add_F"
        android:background="@android:color/holo_purple"
        android:text="Modifier"
        android:textColor="@android:color/background_dark"
        android:drawableRight="@drawable/icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/updateuser"
        android:id="@+id/imageView9"
        android:layout_marginTop="20dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"

        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_NameF"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/black"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:nestedScrollingEnabled="false"
        android:hint="Nom d'utilisateur"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView9"
        android:layout_toStartOf="@+id/imageView9" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Mot de passe :"
        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/pass"
        android:cursorVisible="true"
        android:textColorLink="@android:color/background_light"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:password="true"
        android:textSize="15sp"
        android:layout_below="@+id/E_NameF"
        android:layout_alignLeft="@+id/E_NameF"
        android:layout_alignStart="@+id/E_NameF"
        android:layout_marginTop="20dp" />

    <com.alimuzaffar.lib.widgets.AnimatedEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Email :"
        android:inputType="textNoSuggestions"
        app:animationType="fromRight"
        app:animateCursor="true"
        app:animateTextClear="true"
        android:id="@+id/E_Mail"
        android:textCursorDrawable="@android:color/holo_green_light"
        android:textSize="15sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/pass"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass" />
</RelativeLayout>
